// Transmit<%= packetName.UpperCamel %>Packet transmits the packet over IBC with the specified source port and source channel
func (k Keeper) Transmit<%= packetName.UpperCamel %>Packet(
    ctx sdk.Context,
    packetData types.<%= packetName.UpperCamel %>PacketData,
	sourcePort,
	sourceChannel string,
	timeoutHeight clienttypes.Height,
    timeoutTimestamp uint64,
) (uint64, error) {
	util.IBLogger(util.INFO, "Transmit<%= packetName.UpperCamel %>Packet.Entry: "+packetData.Address+"\n\nTransmit<%= packetName.UpperCamel %>Packet.Input:\n"+fmt.Sprint(packetData))
    channelCap, ok := k.scopedKeeper.GetCapability(ctx, host.ChannelCapabilityPath(sourcePort, sourceChannel))
    if !ok {
        return 0, sdkerrors.Wrap(channeltypes.ErrChannelCapabilityNotFound, "module does not own channel capability")
    }

    packetBytes, err := packetData.GetBytes()
    if err != nil {
        return 0, sdkerrors.Wrapf(sdkerrors.ErrJSONMarshal, "cannot marshal the packet: %w", err)
    }

	util.IBLogger(util.INFO, "Transmit<%= packetName.UpperCamel %>Packet.Exit: "+packetData.Address+"\n")
    return k.channelKeeper.SendPacket(ctx, channelCap, sourcePort, sourceChannel, timeoutHeight, timeoutTimestamp, packetBytes)
}

