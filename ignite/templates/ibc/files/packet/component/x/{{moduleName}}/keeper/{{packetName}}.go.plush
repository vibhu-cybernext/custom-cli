	util.IBLogger(util.INFO, "OnAcknowledgement<%= packetName.UpperCamel %>Packet.Entry: "+data.Address+"\n\nOnAcknowledgement<%= packetName.UpperCamel %>Packet.Input:\n"+fmt.Sprint(data))
